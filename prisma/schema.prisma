generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id            Int         @id @default(autoincrement())
  name          String
  email         String      @unique
  password      String

  created_at    DateTime    @default(now())
  updated_at    DateTime    @updatedAt

  posts         Post[]
  comments      Comment[]
  reactions     Reaction[]
}

model Post{
  id            Int         @id @default(autoincrement())
  title         String
  text          String

  created_at    DateTime    @default(now())
  updated_at    DateTime    @updatedAt

  user_id       Int
  user          User        @relation(fields: [user_id], references: [id])

  comments      Comment[]
  reactions     Reaction[]

  visit         PostVisit?
}

model PostVisit{
  id            Int         @id @default(autoincrement())
  counter       Int         @default(0)
  updated_at    DateTime    @updatedAt

  post_id       Int         @unique
  
  post          Post        @relation(fields: [post_id], references: [id], onDelete: Cascade)
}

model Comment{
  id            Int         @id @default(autoincrement())
  description   String

  created_at    DateTime    @default(now())
  updated_at    DateTime    @updatedAt

  deleted       Boolean     @default(false)
  disabled      Boolean     @default(false)

  user_id       Int
  post_id       Int

  user          User        @relation(fields: [user_id], references: [id])
  post          Post        @relation(fields: [post_id], references: [id])
}

model Reaction{
  id            Int         @id @default(autoincrement())
  verb          ReactionVerb
  created_at    DateTime    @default(now())

  user_id       Int
  post_id       Int

  user          User        @relation(fields: [user_id], references: [id])
  post          Post        @relation(fields: [post_id], references: [id])

  @@index([user_id,post_id])
}

enum ReactionVerb{
  LIKE
  DISLIKE
}